rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Songs collection
    match /songs/{songId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Moments collection
    match /moments/{momentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Families collection
    match /families/{familyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Gifts collection
    match /gifts/{giftId} {
      allow read, write: if request.auth != null;
    }
  }
}